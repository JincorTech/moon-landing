            .name Alexandr Isaev
            .job Frontend
          a(href="https://github.com/Amazing-Space-Invader" target="_blank").member.member.js-reveal-team-second
            .photo
              img(src="./images/team/21.jpg")
              img(src="./images/team/22.jpg").glasses
            .name Aidar Ibatullin
            .job Frontend
          a(href="https://github.com/hlogeon" target="_blank").member.js-reveal-team-first
            .photo
              img(src="./images/team/31.jpg")
              img(src="./images/team/32.jpg").glasses
            .name Andrey Degtyaruk
            .job CTO
          a(href="https://github.com/AlekNS" target="_blank").member.member.js-reveal-team-second
            .photo
              img(src="./images/team/41.jpg")
              img(src="./images/team/42.jpg").glasses
            .name Alexandr Sedelnikov
            .job Backend
          a(href="https://github.com/Aleserche" target="_blank").member.member.js-reveal-team-third
            .photo
              img(src="./images/team/51.jpg")
              img(src="./images/team/52.jpg").glasses
            .name Alexandr Shaikhanov
            .job Backend
            
      .contact.js-reveal-contacts
        .title Contact us
        a(href="https://t.me/MoonWallet").link Telegram group
        a(href="mailto:info@secrettech.io" target="_blank").link info@secrettech.io

